# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
multi_line_output = 3
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true
line_length = 88
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 4

# CSS files
[*.css]
indent_style = space
indent_size = 4

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Requirements files
[requirements*.txt]
insert_final_newline = false

# Documentation
[docs/**]
indent_style = space
indent_size = 4

# Tests
[tests/**]
indent_style = space
indent_size = 4

# Source code
[src/**]
indent_style = space
indent_size = 4

# Configuration files
[*.{ini,cfg}]
indent_style = space
indent_size = 4

# Git files
[.git/**]
insert_final_newline = false

# VS Code settings
[.vscode/**]
indent_style = space
indent_size = 4

# Node.js files
[package.json]
indent_style = space
indent_size = 2

# TypeScript configuration
[tsconfig.json]
indent_style = space
indent_size = 2

# ESLint configuration
[.eslintrc.*]
indent_style = space
indent_size = 2

# Prettier configuration
[.prettierrc.*]
indent_style = space
indent_size = 2

# Git configuration
[.gitconfig]
indent_style = tab
indent_size = 4

# Git ignore
[.gitignore]
insert_final_newline = false

# EditorConfig
[.editorconfig]
insert_final_newline = false

# Pre-commit configuration
[.pre-commit-config.yaml]
indent_style = space
indent_size = 2

# Tox configuration
[tox.ini]
indent_style = space
indent_size = 4

# Setup configuration
[setup.cfg]
indent_style = space
indent_size = 4

# Project configuration
[pyproject.toml]
indent_style = space
indent_size = 4 